---
const { prefixLocale = false } = Astro.props;
import worked from "../../collections/worked.json";
import Button from "../button.astro";
import Work from "../work.astro";
import { getLangFromUrl, useTranslations } from '@i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="max-w-4xl mx-auto px-7 lg:px-0">
  <h2
    class="text-2xl font-bold leading-10 tracking-tight text-neutral-900 dark:text-neutral-100"
  >
    My Work
  </h2>
  <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
    Here are some projects I have worked on over the years.
  </p>
  <div
    class="grid items-stretch w-full sm:grid-cols-2 md:grid-cols-3 gap-7 mt-7"
  >
    {
      worked.map((work) => {
        return (
          <Work
            name={work.name}
            description={work.description}
            image={work.image}
          />
        )
      })
    }
  </div>

  <div class="flex items-center justify-center w-full py-5">
    {prefixLocale ? <Button text={t('nav.allWork')} link={`/${lang}/worked/`} /> : <Button text={t('nav.allWork')} link={`/worked/`} />}
  </div>
</section>
